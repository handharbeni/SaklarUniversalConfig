<resources>
    <!-- Base application theme. -->
    <style name="Theme.SaklarUniversalConfig" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_2</item>
        <item name="colorPrimaryVariant">@color/color_2</item>
        <item name="colorOnPrimary">@color/color_5</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_4</item>
        <item name="colorSecondaryVariant">@color/color_3</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <item name="android:actionMenuTextColor">@color/color_5</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SaklarUniversalConfig.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SaklarUniversalConfig.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SaklarUniversalConfig.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>